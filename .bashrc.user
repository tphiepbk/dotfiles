#!/bin/bash

alias docker="sudo docker"
alias ll="exa -laahF --group --color=always --icons --time-style=long-iso"
alias l="exa -laahF --group --color=always --icons --time-style=long-iso"
alias cls="clear"
alias bashconf="nvim /home/tphiepbk/.bashrc.user"
alias bashreload="source /home/tphiepbk/.bashrc.user"
alias working="cd /home/tphiepbk/WORKING"
alias repo="cd /home/tphiepbk/REPOSITORIES/"
alias install="sudo apt-get install"
